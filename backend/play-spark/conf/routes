# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index()
GET     /api/test                       controllers.RecommendController.test()
GET     /api/recommend/normal/:userId   controllers.RecommendController.contentBasedRecommend(userId: Int)
GET     /api/recommend/super/:userId    controllers.RecommendController.collaborativeRecommend(userId: Int)
GET     /api/similarity/user            controllers.RecommendController.userSimilarity()
GET     /api/similarity/recruit         controllers.RecommendController.recruitSimilarity()
GET     /api/similarity/asynctest       controllers.SimilarityController.asyncCalculateUserSimilarity()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
